{% extends 'base.html.twig' %}

{% block body %}
    <div class="overlay"></div>
    <video playsinline="playsinline" autoplay="autoplay" muted="muted" loop="loop">
        <source src="{{ asset('build/videos/bg.6e3daaaa.mp4') }}" type="video/mp4">
    </video>

    <div class="masthead">
        <div class="masthead-bg"></div>
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-12 my-auto">
                    {{ form_start(form, {'attr': {'class': 'masthead-content text-white py-5 py-md-0'}}) }}
                    <h1 class="mb-3">Coming Soon!</h1>
                    <p class="mb-5">We're working hard to finish the development of this site. Sign up for updates using the form below!</p>
                    <div class="input-group input-group-newsletter">
                        {{ form_widget(form.email) }}
                        <div class="input-group-append">
                            {{ form_widget(form.submit) }}
                        </div>
                    </div>
                    {{ form_rest(form) }}
                    {% for label, messages in app.flashes %}
                        {% for message in messages %}
                            <div class="alert alert-{{ label }} alert-dismissible fade show mt-3" role="alert">
                                <strong>Well done!</strong><br/> {{ message }}
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                        {% endfor %}
                    {% endfor %}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

    {#
    <div class="social-icons">
        <ul class="list-unstyled text-center mb-0">
            <li class="list-unstyled-item">
                <a href="#">
                    <i class="fab fa-twitter"></i>
                </a>
            </li>
            <li class="list-unstyled-item">
                <a href="#">
                    <i class="fab fa-facebook-f"></i>
                </a>
            </li>
            <li class="list-unstyled-item">
                <a href="#">
                    <i class="fab fa-instagram"></i>
                </a>
            </li>
        </ul>
    </div>
    #}
{% endblock %}
